<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.isseiaoki.simplecropview.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        custom:scv_animation_duration="200"
        custom:scv_animation_enabled="true"
        custom:scv_background_color="@color/black"
        custom:scv_crop_enabled="true"
        custom:scv_crop_mode="fit_image"
        custom:scv_frame_color="@color/black"
        custom:scv_frame_stroke_weight="1dp"
        custom:scv_guide_color="@color/login_btn"
        custom:scv_guide_show_mode="show_always"
        custom:scv_guide_stroke_weight="1dp"
        custom:scv_handle_color="@color/login_btn"
        custom:scv_handle_shadow_enabled="true"
        custom:scv_handle_show_mode="show_always"
        custom:scv_handle_size="14dp"
        custom:scv_initial_frame_scale="1.0"
        custom:scv_min_frame_size="50dp"
        custom:scv_overlay_color="@color/light_gray"
        custom:scv_touch_padding="8dp" />

    <LinearLayout
        android:id="@+id/linear_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_btn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Crop"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

