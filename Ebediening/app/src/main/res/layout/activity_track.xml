<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_bg"
    tools:context=".TrackActivity">

    <LinearLayout
        android:background="@drawable/top_bg"
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <include layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="left"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="11sp"
                        android:text="Order ID"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="11sp"
                        android:id="@+id/tv_order"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="11sp"
                        android:text="DELIVERY ADDRESS"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="11sp"
                        android:id="@+id/tv_address"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

                <TextView
                    android:textSize="11sp"
                    android:id="@+id/tv_time"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/rl_place"
                            android:gravity="center"
                            android:background="@drawable/circle_gg"
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/track_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v1"
                            android:layout_marginTop="41dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:layout_width="4dp"
                            android:layout_height="50dp">

                        </View>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/t1"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Order Placed"
                        android:layout_toRightOf="@+id/f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_below="@+id/t1"
                        android:id="@+id/t2"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="We have received your order."
                        android:layout_toRightOf="@+id/f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/rl_confirm"
                            android:gravity="center"
                            android:background="@drawable/circle_gg"
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/track_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v2"
                            android:layout_marginTop="41dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:layout_width="4dp"
                            android:layout_height="50dp">

                        </View>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/t3"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Order Confirmed"
                        android:layout_toRightOf="@+id/f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_below="@+id/t3"
                        android:id="@+id/t4"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Your order have been confirmed."
                        android:layout_toRightOf="@+id/f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/rl_process"
                            android:gravity="center"
                            android:background="@drawable/circle_gg"
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/track_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v3"
                            android:layout_marginTop="41dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:layout_width="4dp"
                            android:layout_height="50dp">

                        </View>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/t5"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Order Processed"
                        android:layout_toRightOf="@+id/f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_below="@+id/t5"
                        android:id="@+id/t6"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="We are preparing your order."
                        android:layout_toRightOf="@+id/f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/rl_ready"
                            android:gravity="center"
                            android:background="@drawable/circle_gg"
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/track_icon"
                                android:id="@+id/iv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v4"
                            android:layout_marginTop="41dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/white"
                            android:layout_width="4dp"
                            android:layout_height="50dp">

                        </View>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/t7"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Ready To Pickup"
                        android:layout_toRightOf="@+id/f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_below="@+id/t7"
                        android:id="@+id/t8"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Your order is ready to pickup."
                        android:layout_toRightOf="@+id/f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_collect"
                        android:gravity="center"
                        android:background="@drawable/circle_gg"
                        android:layout_width="42dp"
                        android:layout_height="42dp">


                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/track_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/t9"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Order Collected"
                        android:layout_toRightOf="@+id/rl_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_below="@+id/t9"
                        android:id="@+id/t10"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="25dp"
                        android:text="Enjoy your meal!We hope to hear from you again soon."
                        android:layout_toRightOf="@+id/rl_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

        </LinearLayout>



    </ScrollView>

</LinearLayout>